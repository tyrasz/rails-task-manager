<h1>Task</h1>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Details</td>
      <td>Completed?</td>
      <td>Link</td>
      <td>Delete</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @task.title %></td>
      <td><%= @task.details %></td>
      <td><%= @task.completed %></td>
      <td><%= link_to "Go to home", tasks_path %><td>
      <td><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %><td>
    </tr>
  </tbody>
</table>
