<h1>Tasks</h1>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Details</td>
      <td>Completed?</td>
      <td>Link</td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.details %></td>
      <td><%= task.completed %></td>
      <td><%= link_to "Go to task", task %><td>
    </tr>
    <% end %>
  </tbody>
</table>
<h1>New task</h1>
<%= link_to "New task", new_task_path %><td>

